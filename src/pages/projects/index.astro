---
import Layout from "../../layouts/Layout.astro";
import PageNav from "../../components/PageNav.jsx";
import Footer from "../../components/Footer.astro";
import ProjectItem from "../../components/ProjectItem.astro";

import { getProjects } from "../../utils/projects";
const PROJECTS = getProjects();
---

<Layout title="Proyectos | Javier Picón">
  <main class="relative w-5/6 mx-auto" transition:persist>
    <PageNav title="/proyectos" previousLink="/#projects" client:load/>
    <section>
      <h1 class="text-primary text-3xl font-extrabold mt-24 text-center sm:text-start">
        Mis Proyectos
      </h1>
      <p class="text-gray-400 text-lg py-4 text-center sm:text-start">
        Aquí figuran algunos de los proyectos que he desarrollado, o me encuentro desarrollando actualmente.
      </p>
      <div class="grid grid-cols-1 items-center w-full gap-4 mt-24">
        {
          PROJECTS?.map((project, index) => (
            <ProjectItem {...project}/>
            <hr class={index < PROJECTS.length-1 ? "opacity-10 mt-8 mb-8" : "opacity-0 mt-8 mb-8"}/>
          ))
        }
      </div>
    </section>
  </main>
  <Footer />
</Layout>